<Window x:Class="NetworkingProgramming.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ServerWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Start Server" Click="StartServerButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,10"/>
            <Button Content="Send Notification" Click="SendNotificationButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,10"/>
            <TextBox Name="OrdersTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,20,0,0" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>
